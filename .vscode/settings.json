{
    // ปิด ghost text (inline code prediction)
    "editor.inlineSuggest.enabled": false,

    // เปิดการแนะนำโค้ด (IntelliSense)
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },

    // ให้แสดง auto-complete เมื่อพิมพ์ตัวอักษรที่เรียกใช้ได้
    "editor.suggestOnTriggerCharacters": true,

    // แนะนำ code snippets
    "editor.snippetSuggestions": "inline",

    // ตั้งค่าอื่นๆ ที่ช่วยให้เขียนได้ง่ายขึ้น
    "editor.tabCompletion": "on",
    "editor.formatOnType": true,
    "editor.formatOnSave": false,
    "editor.autoClosingBrackets": "languageDefined",
    "editor.autoClosingQuotes": "languageDefined",

    // ให้ VS Code คาดเดาคำที่เราเคยใช้ แต่ไม่แสดงเป็น ghost text
    "editor.wordBasedSuggestions": "currentDocument",

    // ป้องกันไม่ให้ Copilot / AI แทรก ghost text (ถ้าคุณใช้)
    "github.copilot.inlineSuggest.enable": false
}
